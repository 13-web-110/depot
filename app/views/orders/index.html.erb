
<h1><%= t('.title') %></h1>

<table id="orders_list">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.address') %></th>
    <th><%= t('.email') %></th>
    <th><%= t('.paytype') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= link_to t('.show'), order %></td>
    <td><%= link_to t('.edit'), edit_order_path(order) %></td>
    <td><%= link_to t('.destroy'), order, method: :delete,
              data: { confirm: t('.sure') } %></td>
  </tr>
<% end %>
</table>

<br />

<!-- <%= link_to 'New Order', new_order_path %> -->

<p><%= will_paginate @orders %></p>

