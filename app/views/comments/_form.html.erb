<%= form_for([@product, @product.comments.build]) do |f| %>

  <% if flash[:alert] %>
	<p id ="alert" ><%= flash[:alert] %> </p>
  <% end %>

  <div class="field">
    <%= f.label :body ,t('.comment_body') %>
    <br />
    <%= f.text_area :body , rows: 3, cols: 120 %>
  </div>
  <div class="actions">
    <%= f.submit 'comment' %>
  </div>
<% end %>
