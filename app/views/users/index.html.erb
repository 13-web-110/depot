<h1><%= t('.title') %></h1>
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
<table id="users_list">
  <tr>
    <th><%= t('.name') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to t('.show'), user %></td>
    <td><%= link_to t('.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('.destroy'), user, method: :delete,
       data: { confirm: t('.sure') } %></td>
  </tr>
<% end %>
</table>

